<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav"
    app:startDestination="@id/listFragment2">
    <fragment
        android:id="@+id/listFragment2"
        android:name="com.example.viewactivity.ListFragment"
        android:label="ListFragment">
        <action
            android:id="@+id/action_listFragment2_to_detailFragment2"
            app:destination="@id/detailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment2"
        android:name="com.example.viewactivity.DetailFragment"
        android:label="DetailFragment" >
        <argument
            android:name="product"
            app:argType="com.example.viewactivity.Product" />
    </fragment>
</navigation>