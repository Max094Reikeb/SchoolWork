{% extends 'base.html.twig' %}

{% block title %}Account index{% endblock %}

{% block body %}
    <h1>Account index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Owner</th>
                <th>Type</th>
                <th>Iban</th>
                <th>Balance</th>
                <th>Min Balance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.owner.firstName }} {{ account.owner.lastName }}</td>
                <td>{{ account.type.value }}</td>
                <td>{{ account.iban }}</td>
                <td>{{ account.balance }}</td>
                <td>{{ account.minBalance }}</td>
                <td>
                    <a href="{{ path('app_account_show', {'id': account.id}) }}">show</a>
                    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_account_new') }}">Create new</a>
{% endblock %}
